<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/navigation_bottom_radio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_image_selector"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:text="新闻"
            android:textColor="@drawable/home_font_selector"
            android:textSize="@dimen/sp13" />

        <RadioButton
            android:id="@+id/rb_girls"
            style="@style/navigation_bottom_radio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_image_selector"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:text="美女"
            android:textColor="@drawable/home_font_selector"
            android:textSize="@dimen/sp13" />


        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/navigation_bottom_radio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_image_selector"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:text="我的"
            android:textColor="@drawable/home_font_selector"
            android:textSize="@dimen/sp13" />


    </RadioGroup>


    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_navigation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg_navigation"
        android:background="@color/bg_gray" />
</RelativeLayout>


